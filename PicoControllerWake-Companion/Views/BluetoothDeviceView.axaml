<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"

             xmlns:vm="using:PicoControllerWake_Companion.ViewModels"
             x:Class="PicoControllerWake_Companion.Views.BluetoothDeviceView"
             x:DataType="vm:BluetoothDeviceViewModel">
    
    <controls:Card>
        <StackPanel>
            <TextBlock Text="{Binding Name}" />
            <TextBlock Text="{Binding Address}" />
            <CheckBox IsChecked="{Binding IsWhitelisted}" Command="{Binding IsWhitelistedChangedCommand}">Allow Wake</CheckBox>
        </StackPanel>
    </controls:Card>
</UserControl>
